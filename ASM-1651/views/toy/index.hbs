<br>
<a class="btn btn-info" href="/toys/add">Add new toy</a>
<br>
<br>
<form class="col-md-4" action="/toys/search" method="post">
   <input class="form-control" type="search" name="keyword" id="" required placeholder="Search by toy name">
</form>
<br>
<br><br>
<table class="table table-primary">
   <tr>
      <th>Toy name</th>
      <th>Toy type</th>
      <th>Toy brand</th>
      <th>Toy image</th>
      <th colspan="2">Menu</th>
   </tr>
   {{#each toys }}
   <tr>
      <td>{{ name }}</td>
      <td>{{ type }}</td>
      <td>{{ brand.name }}</td>
      <td>
         <img src="{{ image }}" alt="" width="100" height="120">
      </td>
      <td>
         <a class="btn btn-warning" href="/toys/edit/{{ _id }}">Edit</a>
      </td>
      <td>
         <a class="btn btn-danger" href="/toys/delete/{{ _id }}" onclick="return confirm('Are you sure to delete this toy ?');">Delete</a>
      </td>
   </tr>
   {{/each}}
</table>